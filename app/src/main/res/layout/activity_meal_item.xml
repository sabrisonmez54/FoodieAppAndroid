<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealItemActivity"
    android:orientation="vertical"
    android:id="@+id/meal_activity_layout">


    <ImageView
        android:id="@+id/meal_activity_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/donut_circle"
        android:transitionName="imageTransition"/>

    <TextView
        android:id="@+id/meal_activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/food_title"
        android:textSize="36sp"
        android:transitionName="titleTransition"/>

    <TextView
        android:id="@+id/meal_activity_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/food_desc"
        android:textSize="18sp"
        android:transitionName="descTransition"/>
</LinearLayout>